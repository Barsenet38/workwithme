model Integration {
  id          String   @id @default(cuid())
  name        String   // e.g., "SLACK", "GOOGLE_CALENDAR", "PAYPAL"
  type        String   // e.g., "COMMUNICATION", "CALENDAR", "PAYROLL"
  status      String   @default("INACTIVE") // "ACTIVE", "INACTIVE", "ERROR"
  config      Json?    // Configuration data stored as JSON
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  // Relations
  company     Company @relation(fields: [companyId], references: [id], onDelete: Cascade)
  companyId   String
}

model SecuritySettings {
  id          String   @id @default(cuid())
  passwordMinLength Int @default(8)
  passwordRequireUppercase Boolean @default(true)
  passwordRequireLowercase Boolean @default(true)
  passwordRequireNumbers Boolean @default(true)
  passwordRequireSpecialChars Boolean @default(true)
  passwordExpiryDays Int @default(90)
  sessionTimeoutMinutes Int @default(480)
  twoFactorEnabled Boolean @default(false)
  loginAttemptsBeforeLockout Int @default(5)
  accountLockoutTimeMinutes Int @default(30)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  // Relations
  company     Company @relation(fields: [companyId], references: [id], onDelete: Cascade)
  companyId   String   @unique
}

